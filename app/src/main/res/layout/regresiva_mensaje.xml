<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms"
                    android:padding="5dp"
                    android:textSize="@dimen/texto"
                    />

                <EditText
                    android:id="@+id/temporizador_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:background="@drawable/borderedondeado"
                    android:inputType="phone"
                    android:padding="10sp"
                    android:text="" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id_telegram"
                    android:padding="5dp"
                    android:textSize="@dimen/texto"
                    />

                <EditText
                    android:id="@+id/temporizador_telegram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:background="@drawable/borderedondeado"
                    android:inputType="phone"
                    android:padding="10sp"
                    android:text="" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mensajealerta"
                    android:padding="5dp"
                    android:textSize="@dimen/texto"
                    />

                <EditText
                    android:id="@+id/temporizador_mensaje_alerta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2sp"
                    android:background="@drawable/borderedondeado"
                    android:lines="2"
                    android:minLines="3"
                    android:padding="10sp"
                    android:scrollbars="vertical"
                    android:text="@string/alarmamensaje" />


        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>